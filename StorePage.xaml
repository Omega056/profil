<Page x:Class="WpfApp14.StorePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Магазин">
    <!-- Градиентный фон -->
    <Page.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#D2B48C" Offset="0"/>
            <GradientStop Color="#E0CDA5" Offset="1"/>
        </LinearGradientBrush>
    </Page.Background>

    <Page.Resources>
        <!-- Тень -->
        <DropShadowEffect x:Key="DropShadow" ShadowDepth="4" BlurRadius="10" Color="#888888" Opacity="0.5"/>

        <!-- Основной стиль закруглённой кнопки -->
        <Style TargetType="Button" x:Key="RoundedButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="20"
                                Padding="{TemplateBinding Padding}"
                                Effect="{StaticResource DropShadow}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Увеличенный стиль кнопки для ключевых действий с триггерами для подсказок -->
        <Style TargetType="Button" x:Key="LargeRoundedButton" BasedOn="{StaticResource RoundedButton}">
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Price}" Value="500 тг">
                    <Setter Property="ToolTip" Value="500 тг"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Price}" Value="1000 тг">
                    <Setter Property="ToolTip" Value="50% убранных вопросов 1000 тг"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <!-- Стили текста товаров -->
        <Style TargetType="TextBlock" x:Key="ItemTitle">
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Foreground" Value="#222222"/>
        </Style>
        <Style TargetType="TextBlock" x:Key="ItemPrice">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Foreground" Value="#555555"/>
        </Style>
    </Page.Resources>

    <DockPanel Margin="30">
        <!-- Верхняя панель -->
        <StackPanel DockPanel.Dock="Top" Orientation="Horizontal" HorizontalAlignment="Left" Margin="0,0,0,20">
            <Button Content="← Назад"
                    Style="{StaticResource RoundedButton}"
                    Width="80"
                    Click="BackButton_Click"/>
        </StackPanel>

        <!-- Заголовок -->
        <TextBlock Text="Магазин"
                   FontSize="24"
                   FontWeight="Bold"
                   Margin="0,0,0,30"
                   Foreground="#333333"/>

        <!-- Список товаров -->
        <StackPanel>
            <!-- Товар шаблон -->
            <ItemsControl x:Name="ItemsControl">
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <Border Background="#D2B48C" CornerRadius="15" Padding="20" Margin="0,0,0,15" Effect="{StaticResource DropShadow}" Opacity="0.9">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="Auto"/>
                                    <ColumnDefinition Width="*"/>
                                    <ColumnDefinition Width="Auto"/>
                                </Grid.ColumnDefinitions>
                                <Image Source="{Binding ImagePath}" Width="40" Height="40" Margin="0,0,15,0"/>
                                <StackPanel Grid.Column="1" VerticalAlignment="Center">
                                    <TextBlock Text="{Binding Title}" Style="{StaticResource ItemTitle}"/>
                                    <TextBlock Text="{Binding Price}" Style="{StaticResource ItemPrice}" Margin="0,5,0,0"/>
                                </StackPanel>
                                <Button Grid.Column="2"
                                        Content="Купить"
                                        Style="{StaticResource LargeRoundedButton}"
                                        Background="#6A5ACD"
                                        Foreground="White"
                                        Width="80"
                                        Click="BuyButton_Click"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>
    </DockPanel>
</Page>