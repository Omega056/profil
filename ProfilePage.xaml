<Page x:Class="WpfApp14.ProfilePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Профиль">
    <Page.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#D2B48C" Offset="0"/>
            <GradientStop Color="#E0CDA5" Offset="1"/>
        </LinearGradientBrush>
    </Page.Background>

    <Page.Resources>
        <!-- Тень -->
        <DropShadowEffect x:Key="DropShadow" ShadowDepth="4" BlurRadius="10" Color="#888888" Opacity="0.5"/>

        <!-- Стили кнопок -->
        <Style TargetType="Button" x:Key="RoundedButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="20"
                                Padding="{TemplateBinding Padding}"
                                Effect="{StaticResource DropShadow}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <Style TargetType="Button" x:Key="LargeRoundedButton" BasedOn="{StaticResource RoundedButton}">
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- Стиль для TextBox -->
        <Style TargetType="TextBox" x:Key="RoundedTextBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="#FF0000"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TextBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}">
                            <ScrollViewer x:Name="PART_ContentHost"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Margin="30">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок + Назад -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,30">
            <Button Style="{StaticResource RoundedButton}"
                    Width="40" Height="40"
                    Click="BackButton_Click">
                <TextBlock Text="←" FontSize="20"/>
            </Button>
            <TextBlock Text="Профиль"
                       FontSize="24"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       Margin="15,0,0,0"
                       Foreground="#333333"/>
        </StackPanel>

        <!-- Информация о профиле -->
        <StackPanel Grid.Row="1" VerticalAlignment="Center">
            <Border CornerRadius="20" Padding="20" Margin="0,0,0,30" Effect="{StaticResource DropShadow}" Opacity="0.9">
                <Border.Background>
                    <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                        <GradientStop Color="#D2B48C" Offset="0"/>
                        <GradientStop Color="#C9A674" Offset="1"/>
                    </LinearGradientBrush>
                </Border.Background>
                <StackPanel>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="Auto"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Ellipse Width="90" Height="90" Fill="#C0C0C0" Margin="0,0,20,0"/>
                        <StackPanel Grid.Column="1" VerticalAlignment="Center">
                            <TextBlock x:Name="UsernameTextBlock" Text="Студент" FontWeight="Bold" FontSize="20" Foreground="#222222"/>
                            <StackPanel Orientation="Horizontal" Margin="0,8,0,0">
                                <TextBlock Text="IQ: " FontWeight="SemiBold" FontSize="16" Foreground="#555"/>
                                <TextBlock x:Name="IQTextBlock" Text="100" FontSize="16" Foreground="#555"/>
                            </StackPanel>
                            <StackPanel Orientation="Horizontal" Margin="0,4,0,0">
                                <TextBlock Text="Правильных ответов: " FontWeight="SemiBold" FontSize="16" Foreground="#555"/>
                                <TextBlock x:Name="CorrectAnswersTextBlock" Text="0%" FontSize="16" Foreground="#555"/>
                            </StackPanel>
                        </StackPanel>
                    </Grid>
                    <TextBox x:Name="UsernameTextBox"
                             Style="{StaticResource RoundedTextBox}"
                             Margin="0,15,0,0"
                             Visibility="Collapsed"/>
                    <Button x:Name="EditUsernameButton"
                            Style="{StaticResource LargeRoundedButton}"
                            Background="#FF481416"
                            Foreground="White"
                            Content="Изменить имя"
                            Margin="0,15,0,0"
                            Click="EditUsernameButton_Click"/>
                </StackPanel>
            </Border>
        </StackPanel>

        <!-- Кнопка выхода -->
        <Button Grid.Row="2"
                Style="{StaticResource LargeRoundedButton}"
                Foreground="White"
                Content="Выйти"
                Click="LogoutButton_Click" BorderBrush="Black">
            <Button.Background>
                <ImageBrush/>
            </Button.Background>
        </Button>
    </Grid>
</Page>