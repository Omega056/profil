<Page x:Class="WpfApp14.SettingsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Настройки">
    <!-- Фон с градиентом -->
    <Page.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#D2B48C" Offset="0"/>
            <GradientStop Color="#E0CDA5" Offset="1"/>
        </LinearGradientBrush>
    </Page.Background>

    <Page.Resources>
        <!-- Эффект тени -->
        <DropShadowEffect x:Key="DropShadow" ShadowDepth="2" BlurRadius="8" Color="#888888"/>

        <!-- Базовый стиль кнопки -->
        <Style TargetType="Button" x:Key="RoundedButton">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="20"
                                Padding="{TemplateBinding Padding}"
                                Effect="{StaticResource DropShadow}">
                            <ContentPresenter HorizontalAlignment="Center"
                                              VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Большая кнопка на основе RoundedButton -->
        <Style TargetType="Button" x:Key="LargeRoundedButton" BasedOn="{StaticResource RoundedButton}">
            <Setter Property="Height" Value="50"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>

        <!-- Стиль для ComboBox, стилизованный как кнопка -->
        <Style TargetType="ComboBox" x:Key="ButtonStyledComboBox">
            <Setter Property="Background" Value="Transparent"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="2"/>
            <Setter Property="Foreground" Value="#333333"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ComboBox">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="20"
                                Effect="{StaticResource DropShadow}">
                            <Grid>
                                <ToggleButton x:Name="ToggleButton"
                                            IsChecked="{Binding IsDropDownOpen, Mode=TwoWay, RelativeSource={RelativeSource TemplatedParent}}"
                                            Background="Transparent"
                                            BorderBrush="Transparent"
                                            BorderThickness="0"/>
                                <ContentPresenter x:Name="ContentSite"
                                                IsHitTestVisible="False"
                                                Content="{TemplateBinding SelectionBoxItem}"
                                                ContentTemplate="{TemplateBinding SelectionBoxItemTemplate}"
                                                ContentTemplateSelector="{TemplateBinding ItemTemplateSelector}"
                                                Margin="10,5"
                                                VerticalAlignment="Center"
                                                HorizontalAlignment="Left"/>
                                <TextBox x:Name="PART_EditableTextBox"
                                        Visibility="Hidden"
                                        IsReadOnly="{TemplateBinding IsReadOnly}"/>
                                <Popup x:Name="PART_Popup"
                                    IsOpen="{TemplateBinding IsDropDownOpen}"
                                    Placement="Bottom"
                                    AllowsTransparency="True"
                                    Focusable="False"
                                    PopupAnimation="Slide">
                                    <Grid MaxHeight="{TemplateBinding MaxDropDownHeight}"
                                        MinWidth="{TemplateBinding ActualWidth}"
                                        Background="Transparent">
                                        <Border x:Name="DropDownBorder"
                                                Background="Transparent"
                                                BorderBrush="#DDDDDD"
                                                BorderThickness="2"
                                                CornerRadius="5"/>
                                        <ScrollViewer Margin="4,6,4,6"
                                                    Background="Transparent">
                                            <ItemsPresenter KeyboardNavigation.DirectionalNavigation="Contained"/>
                                        </ScrollViewer>
                                    </Grid>
                                </Popup>
                            </Grid>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

        <!-- Стиль для ToggleButton -->
        <Style TargetType="ToggleButton" x:Key="StyledToggleButton">
            <Setter Property="Background" Value="#C5C5C5"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="ToggleButton">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="12">
                            <Grid>
                                <Ellipse x:Name="Circle"
                                         Width="20"
                                         Height="20"
                                         Fill="White"
                                         HorizontalAlignment="Left"
                                         Margin="2"/>
                            </Grid>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="Circle" Property="HorizontalAlignment" Value="Right"/>
                                <Setter Property="Background" Value="#6A5ACD"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Page.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель с кнопкой Назад и заголовком -->
        <Grid Grid.Row="0" Margin="0,0,0,20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Button Grid.Column="0"
                    Style="{StaticResource RoundedButton}"
                    Width="40"
                    Height="40"
                    Click="BackButton_Click">
                <TextBlock Text="←" FontSize="16"/>
            </Button>
            <TextBlock Grid.Column="1"
                       Text="Настройки"
                       FontSize="20"
                       FontWeight="Bold"
                       Foreground="#333333"
                       VerticalAlignment="Center"
                       HorizontalAlignment="Center"/>
        </Grid>

        <!-- Основной контент -->
        <StackPanel Grid.Row="1" VerticalAlignment="Top">
            <!-- Настройки звука -->
            <Border Background="#D2B48C" CornerRadius="12" Padding="15" Effect="{StaticResource DropShadow}" Margin="0,0,0,20">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Звук" FontSize="16" VerticalAlignment="Center" Foreground="#333333"/>
                    <ToggleButton x:Name="SoundToggle"
                                  Grid.Column="1"
                                  Width="50"
                                  Height="25"
                                  Style="{StaticResource StyledToggleButton}"
                                  VerticalAlignment="Center"
                                  Margin="10,0,0,0"/>
                </Grid>
            </Border>

            <!-- Кнопка Профиль -->
            <Button Content="Профиль"
                    Style="{StaticResource LargeRoundedButton}"
                    Background="#FF6F1C1C"
                    Foreground="White"
                    Click="ProfileButton_Click"
                    Margin="0,0,0,20" BorderBrush="Black"/>

            <!-- Кнопка Поддержка -->
            <Button Content="Поддержка"
                    Style="{StaticResource LargeRoundedButton}"
                    Background="#FF003324"
                    Foreground="White"
                    Click="SupportButton_Click"
                    Margin="0,0,0,20" BorderBrush="Black"/>

            <!-- Выбор темы -->
            <Border Background="#D2B48C" CornerRadius="12" Padding="15" Effect="{StaticResource DropShadow}">
                <Grid>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="117.618"/>
                        <ColumnDefinition Width="12.382"/>
                    </Grid.ColumnDefinitions>
                    <TextBlock Text="Тема" FontSize="16" VerticalAlignment="Center" Foreground="#333333"/>
                    <ComboBox x:Name="ThemeSelector"
                              Grid.Column="1"
                              Width="120"
                              Height="30"
                              VerticalAlignment="Center"
                              Margin="10,0,0,0"
                              Style="{StaticResource ButtonStyledComboBox}" Grid.ColumnSpan="2" BorderBrush="#FF1B0000">
                        <ComboBoxItem Content="Светлая"/>
                        <ComboBoxItem Content="Тёмная"/>
                    </ComboBox>
                </Grid>
            </Border>
        </StackPanel>
    </Grid>
</Page>