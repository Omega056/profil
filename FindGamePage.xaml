<Page x:Class="WpfApp14.FindGamePage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      Title="Найти игру">
    <!-- Градиентный фон -->
    <Page.Background>
        <LinearGradientBrush StartPoint="0,0" EndPoint="0,1">
            <GradientStop Color="#DCEFFF" Offset="0"/>
            <GradientStop Color="#F5F8FF" Offset="1"/>
        </LinearGradientBrush>
    </Page.Background>

    <Page.Resources>
        <!-- Тень для карточек -->
        <DropShadowEffect x:Key="DropShadow" ShadowDepth="2" BlurRadius="8" Color="#888888"/>
        <!-- Стили для кнопок -->
        <Style TargetType="Button" x:Key="RoundedButton">
            <Setter Property="Background" Value="#FFFFFF"/>
            <Setter Property="BorderBrush" Value="#DDDDDD"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="10,5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}"
                                CornerRadius="10"
                                Padding="{TemplateBinding Padding}"
                                Effect="{StaticResource DropShadow}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <Style TargetType="Button" x:Key="LargeRoundedButton" BasedOn="{StaticResource RoundedButton}">
            <Setter Property="Height" Value="40"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
    </Page.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Заголовок + Назад -->
        <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,10">
            <Button Style="{StaticResource RoundedButton}"
                    Width="40" Height="40"
                    Click="BackButton_Click">
                ←
            </Button>
            <TextBlock Text="Найти игру"
                       FontSize="20"
                       FontWeight="Bold"
                       VerticalAlignment="Center"
                       Margin="10,0,0,0"/>
        </StackPanel>

        <!-- Мои викторины -->
        <StackPanel Grid.Row="1" Margin="0,0,0,20">
            <TextBlock Text="Мои викторины"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Margin="0,0,0,10"/>
            <Border Background="#FFFFFF"
                    CornerRadius="12"
                    Padding="10"
                    Effect="{StaticResource DropShadow}">
                <ListView x:Name="UserQuizzesListView"
                          SelectionMode="Single"
                          MouseDoubleClick="UserQuizzesListView_MouseDoubleClick">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="ID" Width="50" DisplayMemberBinding="{Binding Id}"/>
                            <GridViewColumn Header="Название" Width="200" DisplayMemberBinding="{Binding Title}"/>
                            <GridViewColumn Header="Вопросов" Width="80" DisplayMemberBinding="{Binding QuestionCount}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Border>
        </StackPanel>

        <!-- Викторины программы -->
        <StackPanel Grid.Row="2">
            <TextBlock Text="Викторины программы"
                       FontSize="18"
                       FontWeight="SemiBold"
                       Margin="0,0,0,10"/>
            <Border Background="#FFFFFF"
                    CornerRadius="12"
                    Padding="10"
                    Effect="{StaticResource DropShadow}">
                <ListView x:Name="ProgramQuizzesListView"
                          SelectionMode="Single"
                          MouseDoubleClick="ProgramQuizzesListView_MouseDoubleClick">
                    <ListView.View>
                        <GridView>
                            <GridViewColumn Header="ID" Width="50" DisplayMemberBinding="{Binding Id}"/>
                            <GridViewColumn Header="Название" Width="200" DisplayMemberBinding="{Binding Title}"/>
                            <GridViewColumn Header="Вопросов" Width="80" DisplayMemberBinding="{Binding QuestionCount}"/>
                        </GridView>
                    </ListView.View>
                </ListView>
            </Border>
        </StackPanel>

        <!-- Кнопки Запустить игру и Удалить -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
            <Button Style="{StaticResource LargeRoundedButton}"
                    Background="#6A5ACD"
                    Foreground="White"
                    Content="Запустить игру"
                    Margin="0,0,10,0"
                    Click="StartGameButton_Click"/>
            <Button Style="{StaticResource LargeRoundedButton}"
                    Background="#FF4444"
                    Foreground="White"
                    Content="Удалить"
                    Click="DeleteQuizButton_Click"/>
        </StackPanel>
    </Grid>
</Page>